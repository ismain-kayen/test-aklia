{% extends 'base.html.twig' %}


{% block body %}
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6 bg-light mt-3">
            <h2 class="my-4 text-center">Inscrivez vous sur notre site !</h2>
            {{ form_row(form.username, {'label': 'Nom'}) }}
            {{ form_row(form.email) }}
            {{ form_row(form.phone, {'label': 'Téléphone'}) }}
            {{ form_row(form.password.first, {'label': 'Mot de passe'}) }}
            {{ form_row(form.password.second, {'label': 'Confirmer votre mot de passe'}) }}
            <button class="btn btn-success mb-3">Inscription</button>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock body %}